<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- DayNight styles -->
    <style name="RedRock.BaseTheme" parent="RedRock.DayNight.BaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">false</item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">
            @transition/shared_element_transform
        </item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">
            @transition/shared_element_transform
        </item>

        <item name="android:actionBarStyle">@style/RedRock.ActionBar</item>
        <item name="actionBarStyle">@style/RedRock.ActionBar</item>
        <item name="toolbarStyle">@style/RedRock.Toolbar</item>

        <item name="android:alertDialogTheme">@style/RedRock.AlertDialog</item>
        <item name="alertDialogTheme">@style/RedRock.AlertDialog</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/navigation_bar
        </item>
        <item name="android:navigationBarDividerColor" tools:targetApi="O_MR1">
            @color/navigation_bar_divider
        </item>
    </style>

